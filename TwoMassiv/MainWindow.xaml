<Window x:Class="TwoMassiv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoMassiv"
        mc:Ignorable="d"
        Title="Двумерный Массив" Height="450" Width="800" Background="#FF00FF" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10 10 10 10" HorizontalAlignment="Center">
            <TextBox x:Name="NRow" Width="90" Margin="10,0,10,24" Background="Aqua"/>
            <TextBox x:Name="NCol" Width="102" Margin="10,0,10,24" Background="Aqua"/>
            <Button Content="Сгенерировать" Click="Button_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10 10 10 10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="AVG" Width="100" Height="50" />
            <Button Content="Вывести" Height="50" Click="Button_Click_1"/>
        </StackPanel>
        <TextBlock Grid.Row="2" x:Name="Result" Margin="10 10 10 10" Background="Tomato"/>

    </Grid>

</Window>
